<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
           app:srcCompat="@drawable/ic_access_time_blue_24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/tv_hora_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="27dp"
                android:lines="1"
                android:text="06:00 am"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_titulo_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_hora_item"
                android:layout_marginTop="48dp"
                android:lines="1"
                android:text="Jogo Mocambique vs Angola"
                android:textColor="@android:color/black" />
        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>





